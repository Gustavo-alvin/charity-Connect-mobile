<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".fragments.CatalogoFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="69dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/shortlogocharitycloset" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="20dp">

        <SearchView
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal" />
    </androidx.cardview.widget.CardView>

    <!--inicio dos cards do lado esquerdo-->

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:maxWidth="50dp"
        android:text="@string/encontrar_ong"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#00000000"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#881414"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ong_coracao_generoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ongs_prancheta_1" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="right"
                android:visibility="invisible"
                tools:src="@drawable/ongs_04" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:layout_marginTop="200dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#0F5B85"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/sorrisos_do_amanha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ongs_02" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="right"
                android:visibility="invisible"
                tools:src="@drawable/ongs_04" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="400dp"
            android:backgroundTint="#881414"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ong_fds1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ongs_04"
                tools:src="@drawable/ongs_04" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="right"
                android:visibility="invisible"
                tools:src="@drawable/ongs_04"
                tools:ignore="DuplicateIds" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="right"
            android:layout_marginTop="400dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#881414"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ong_fds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ongs_03"
                tools:src="@drawable/ongs_03" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="right"
                android:visibility="invisible"
                tools:src="@drawable/ongs_03" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <!--fim dos cards do lado esquedo-->

    <!--inicio dos cards do lado direito-->

</FrameLayout>

