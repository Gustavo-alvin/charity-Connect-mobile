<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".CatalogoFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="67dp"
        android:src="@drawable/shortlogocharitycloset" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="25dp"
        >

        <SearchView
            android:layout_width="360dp"
            android:layout_height="40dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="@string/encontrar_ong"/>

    <!--inicio dos cards do lado esquerdo-->

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#881414" >

        <TextView
            android:id="@+id/Sp"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Sp"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="325dp"
        android:backgroundTint="#A32350" >

        <TextView
            android:id="@+id/Es"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Es"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#50145A" >

        <TextView
            android:id="@+id/Go"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Go"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="575dp"
        android:backgroundTint="#251488" >

        <TextView
            android:id="@+id/Mg"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Mg"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>
    <!--fim dos cards do lado esquedo-->

    <!--inicio dos cards do lado direito-->
    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_gravity="right"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#0F5B85">

        <TextView
            android:id="@+id/Rj"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Rj"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_gravity="right"
        android:layout_marginTop="325dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#0F8581">

        <TextView
            android:id="@+id/Al"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Al"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_gravity="right"
        android:layout_marginTop="450dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#0F8548">

        <TextView
            android:id="@+id/Ce"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Ce"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="158dp"
        android:layout_height="105dp"
        android:layout_gravity="right"
        android:layout_marginTop="575dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#38850F">

        <TextView
            android:id="@+id/Ba"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="@string/explore_Ba"
            android:textColor="#ffffff"
            android:textSize="16dp"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>

