<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".fragments.CatalogoFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="67dp"
        android:src="@drawable/shortlogocharitycloset" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="25dp"
        >

        <SearchView
            android:layout_width="360dp"
            android:layout_height="40dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="@string/encontrar_ong"/>

    <!--inicio dos cards do lado esquerdo-->

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#881414"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ongs_prancheta_1" />
    </androidx.cardview.widget.CardView>

    <!--fim dos cards do lado esquedo-->

    <!--inicio dos cards do lado direito-->
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="right"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#0F5B85"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ongs_02" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="161dp"
        android:layout_height="162dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#881414"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ongs_prancheta_1" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="right"
            android:visibility="invisible" />
    </androidx.cardview.widget.CardView>

</FrameLayout>

